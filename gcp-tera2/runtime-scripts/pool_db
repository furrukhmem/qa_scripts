#!/bin/bash
sudo apt update

sudo apt install -y mongodb

echo "
fork = true
bind_ip = 0.0.0.0
port = 27017
quiet = true
dbpath = /srv/mongodb
logpath = /var/log/mongodb/mongod.log
logappend = true
journal = true
" > ~/db_all.conf

sudo systemctl stop mongodb

sudo mongod -f ~/db_all.conf

sudo systemctl start mongodb